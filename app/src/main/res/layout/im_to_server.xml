<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cristina.myapplication.Imguploadtoserver">

    <Button
        android:id="@+id/buttonSelect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="CLICK AQUÍ PARA SELECCIONAR UNA IMAGEN DE LA GALERÍA"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="ACEPTAR " />

    <EditText
        android:id="@+id/editTextImageName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonUpload"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="Ponle nombre" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="270dp"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/editTextImageName"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@+id/buttonSelect"
        android:layout_alignParentLeft="true" />



</RelativeLayout>


